{
  "name": "arcade-platform",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "check:lifecycle": "node scripts/check-lifecycle.js",
    "check:xpbadge": "node scripts/check-xpbadge.js",
    "check:all": "node scripts/check-xpbadge.js && node scripts/check-lifecycle.js",
    "lint:games": "node scripts/validate-games.js",
    "prepare": "husky install",
    "precommit:run": "npm run check:all && npm test || true",
    "precommit:strict": "STRICT_GUARDS=1 npm run check:all && npm test",
    "pretest": "node scripts/prepare-playwright.js",
    "test": "node scripts/run-e2e.js",
    "test:install": "node scripts/prepare-playwright.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "husky": "^9.0.11"
  }
}
