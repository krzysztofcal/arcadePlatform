{
  "name": "arcade-platform",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "check:lifecycle": "node scripts/check-lifecycle.js",
    "check:xpbadge": "node scripts/check-xpbadge.js",
    "check:all": "node scripts/check-lifecycle.js && node scripts/check-xpbadge.js",
    "guard:lifecycle": "node scripts/guard-lifecycle.js",
    "guard:badge": "node scripts/guard-badge.js",
    "ci:guards": "npm run guard:lifecycle && npm run guard:badge",
    "lint:games": "node scripts/validate-games.js",
    "prepare": "husky install",
    "test": "node scripts/test-all.mjs",
    "test:unit": "npm run lint:games",
    "test:e2e": "node scripts/prepare-playwright.js && node scripts/run-e2e.js",
    "syntax": "node scripts/syntax-check.mjs",
    "test:quick": "node scripts/syntax-check.mjs",
    "test:cli": "node scripts/test-cli.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "acorn": "^8.15.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "**/*.js": "node scripts/check-lifecycle.js --files",
    "**/*.html": [
      "node scripts/check-xpbadge.js --fix --files",
      "node scripts/check-lifecycle.js --files"
    ]
  }
}
